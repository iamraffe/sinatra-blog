<div class="container">
  <div class="row">
  <aside class="col-md-12">
    <section class="user-info">
      <header class="row">
        <img src="<%= @user.image %>" alt="<%= @user.name %>" class="user-picture">
        <h1 class="user-name">
          <%= @user.name %>
        </h1>

      </header>
    </section>
  </aside>
  </div>
  <section class="row user-posts">
    <div class="col-md-12">
      <% if @user.posts.any? %>
        <h3>Posts (<%= @user.posts.count %>)</h3>
      <% else %>
        <h3 class="text-center">You have not posted anything yet... <a href="/posts/create"><strong>Get started!</strong></a></h3>
      <% end %>
    </div>
  </section>
</div>
