<section class="container post-create">
   <div class="row">
      <div class="col-md-8 col-md-offset-2">
         <h1 class="text-center">Create Post</h1>
      </div>
   </div>
   <section class="form-wrapper row">
      <div class="col-md-8 col-md-offset-2">
         <form action="/posts" method="post"role="form">
         <input type="hidden" name="post[user_id]" value="<%= current_user.id %>">
          <div class="form-group">
            <label for="post_title">Title:</label>
            <br>
            <input id="post_title" class="form-control" name="post[title]" type="text" value="" style="width=90%"/>
          </div>
          <div class="form-group">
            <label for="post_body">Body:</label>
            <br>
            <textarea id="post_body" name="post[body]" class="form-control" rows="10"></textarea>
          </div>
          <button type="submit" class="btn custom-btn">Submit</button>
          <br>
         </form>
      </div>
   </section>
</section>


