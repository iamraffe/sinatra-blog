<header class="intro-header" style="">
  <div class="overlay"></div>
  <div class="container-fluid">
      <div class="row">
          <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
              <div class="site-heading">
                  <h1><img src="images/sinatra-signature.png" alt="" style="-webkit-filter: invert(1); filter: invert(1);"></h1>
                  <hr class="small">
                  <span class="subheading">A blog developed with the Sinatra Framework for Ironhack</span>
              </div>
          </div>
      </div>
  </div>
</header>
<section class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <% @posts.each do |post| %>
        <article class="post-excerpt">
          <header>
            <h1 class="post-title"><a href="/posts/<%= post.id %>"><%= post.title %></a></h1>
            <h2 class="post-author">written by <a href="/users/<%= post.user.id %>"><%= post.user.name %></a></h2>
          </header>
          <p><%= post.body %></p>
          <footer>
            <h1>Created: <%= post.created_at %></h1>
          </footer>
        </article>
      <% end %>
    </div>
  </div>
</section>